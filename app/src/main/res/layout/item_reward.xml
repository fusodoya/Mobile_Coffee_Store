<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="15dp"
    android:background="@color/white"
    android:layout_marginBottom="2dp"
    >

    <!-- Coffee Name -->
    <TextView
        android:id="@+id/item_reward_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Americano"
        android:textColor="@color/dark3_blue"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <!-- Order Date and Time -->
    <TextView
        android:id="@+id/item_reward_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="24 June | 12:30 PM"
        android:layout_marginTop="13dp"
        android:textColor="@color/light_gray"
        android:textStyle="bold"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_reward_name"
        />

    <!-- Price -->
    <TextView
        android:id="@+id/item_reward_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+ 12 Pts"
        android:gravity="end"
        android:textColor="@color/dark3_blue"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/item_reward_time"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/line"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/item_reward_time"/>

</androidx.constraintlayout.widget.ConstraintLayout>
