<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Details.Details"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/detail_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/detail_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/back_arrow"
                android:background="@color/empty"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:text="Details"/>

            <ImageButton
                android:id="@+id/detail_cart"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_cart"
                android:scaleType="fitCenter"
                android:background="@color/empty"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/detail_coffee_id"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/rounded_background"
            android:padding="5dp"
            android:src="@drawable/temp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="30dp"
                android:orientation="horizontal"
                android:gravity="center"
                >

                <TextView
                    android:id="@+id/detail_coffee_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="18sp"
                    android:text="name"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    android:textStyle="bold"
                    android:layout_weight="1"/>

                <LinearLayout
                    android:id="@+id/number_cup"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/rounded_border"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/detail_minus"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/minus"
                        android:scaleType="fitCenter"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:background="@color/empty"/>

                    <TextView
                        android:id="@+id/detail_number_cup"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="1"
                        android:gravity="center"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:textColor="@color/dark3_blue"
                        android:textSize="24sp"/>

                    <ImageButton
                        android:id="@+id/detail_plus"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/plus"
                        android:scaleType="fitCenter"
                        android:layout_gravity="center"
                        android:layout_marginRight="10dp"
                        android:background="@color/empty"/>

                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/line"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="18sp"
                    android:text="Shot"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    android:textStyle="bold"
                    android:layout_weight="1"/>

                <ImageView
                    android:id="@+id/detail_single_shot"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/rounded_border"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:src="@drawable/single_shot"/>

                <ImageView
                    android:id="@+id/detail_double_shot"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/rounded_border"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:src="@drawable/double_shot"
                    android:layout_marginStart="10dp"/>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/line"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="18sp"
                    android:text="Select"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    android:textStyle="bold"
                    android:layout_weight="1"/>

                <ImageView
                    android:id="@+id/detail_hot"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/hot"/>

                <ImageView
                    android:id="@+id/detail_cold"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/cold"
                    android:layout_marginStart="30dp"/>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/line"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="18sp"
                    android:text="Size"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    android:textStyle="bold"
                    android:layout_weight="1"/>

                <ImageView
                    android:id="@+id/detail_small"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/size"/>

                <ImageView
                    android:id="@+id/detail_medium"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:src="@drawable/size"
                    android:layout_marginStart="30dp"/>

                <ImageView
                    android:id="@+id/detail_big"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/size"
                    android:layout_marginStart="30dp"/>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/line"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="18sp"
                    android:text="Ice"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    android:textStyle="bold"
                    android:layout_weight="1"/>

                <ImageView
                    android:id="@+id/detail_one"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/one"/>

                <ImageView
                    android:id="@+id/detail_two"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/two"
                    android:layout_marginStart="30dp"/>

                <ImageView
                    android:id="@+id/detail_three"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/three"
                    android:layout_marginStart="30dp"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="20sp"
                    android:text="Total Amount"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    android:textStyle="bold"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/detail_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="20sp"
                    android:text="$0.00"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    android:textStyle="bold"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/detail_add_to_cart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:padding="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/rounded_background">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add to cart"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>