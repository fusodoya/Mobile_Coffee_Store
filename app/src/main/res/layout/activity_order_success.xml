<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_order_success"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/white"
    tools:context=".OrderSuccess.OrderSuccess">

    <!-- Icon -->
    <ImageView
        android:id="@+id/order_success_icon"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/ic_order_success"
        android:contentDescription="@string/order_success_icon_desc"
        android:layout_marginBottom="20dp" />

    <!-- Title -->
    <TextView
        android:id="@+id/order_success_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/order_success_title"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="10dp" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/order_success_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/order_success_subtitle"
        android:textSize="16sp"
        android:textColor="@color/gray"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:lineSpacingExtra="2dp" />

    <!-- Button -->
    <Button
        android:id="@+id/track_my_order_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/track_my_order"
        android:background="@drawable/rounded_blue"
        android:textColor="@color/white"
        android:padding="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:drawablePadding="10dp"
        android:elevation="4dp"
        android:gravity="center" />
</LinearLayout>
